package Strings;

import java.util.Scanner;

public class Gemstones {

	public static void main(String[] args) {

		Scanner scn = new Scanner(System.in);
		int n=scn.nextInt();
		int[] arr = new int[26];
		for(int i=0;i<n;i++){
			String str=scn.next();
			for(int j=0;j<str.length();j++){
				arr[str.charAt(j)-'a']++;
			}
		}
		int c=0;
		for(int i=0;i<arr.length;i++){
			if(arr[i]>=n){
				c++;
			}
		}
		System.out.println(c);
	}

}
